#!/bin/bash -eux
set -o pipefail

if mountpoint /data/xps/metric/dev; then
	echo '/data/xps/metric/dev is already mounted'
else
	sudo mount /dev/xvdf /data/xps/metric/dev
fi

if mountpoint /data/sets; then
	echo '/data/sets is already mounted'
else
	sudo mount /dev/xvdg /data/sets
fi

if mountpoint ~/old_root; then
	echo '~/old_root is already mounted'
else
	sudo mount /dev/xvdh1 ~/old_root
fi
