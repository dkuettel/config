#!/bin/zsh
set -eu -o pipefail

x=${1:?executable}

cd $workspace_home

while true; do

    reset
    echo ">>>" $x "<<<"
    echo

    if .tmux-bind-g/$x; then
        echo
        echo ">>>" $x "<<<"
    else
        ret=$?
        echo
        echo ">>>" $x "<<<"
        echo "exit code = $ret"
    fi

    while true; do
        read -sk "r?[q] to quit or [enter] to rerun:"
        echo
        if [[ $r == q ]]; then
            exit $ret
        fi
        if [[ $r == $'\n' ]]; then
            break
        fi
    done

done
