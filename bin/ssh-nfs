#!/bin/zsh
set -eux -o pipefail

exit 1 # not ready

# see https://varunkatta.wordpress.com/2011/07/21/mount-nfs-through-an-ssh-tunnel-on-mac/

# build tunnel
ssh -L 3049:fs-5ff3f997.efs.eu-west-1.amazonaws.com:2049 efs read

# connect nfs
sudo mount -t nfs4 -o nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport,port=3049 localhost:/ /efs/dkuettel
