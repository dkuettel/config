#!/bin/zsh
set -eux -o pipefail

# new or attach to an ~/config session

base=~/config
name=config

envs=(
    -e workspace_active=yes
    -e workspace_home=$base
    -e h=$base
)

cmds=(
    new-session -s $name -A -c $base $envs true \;
    bind-key V new-window -n src -c $base -bt 1 V \;
    new-window -n src V
)

tmux $cmds
