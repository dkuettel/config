#!/bin/zsh
set -eu -o pipefail

pactl set-card-profile alsa_card.pci-0000_01_00.1 off >&/dev/null && echo speakers off || echo no speakers
pactl set-card-profile alsa_card.pci-0000_00_1b.0 off >&/dev/null && echo headphones off || echo no headphones
pactl set-card-profile bluez_card.2C_41_A1_49_96_07 a2dp_sink >&/dev/null && echo bose on || echo no bose
