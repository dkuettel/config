
set-option -g status on

set-option -g status-position bottom

set-option -g status-interval 5

set-option -g status-left-length 100
set-option -g status-left-style 'fg=brightgreen,bg=black'
set-option -g status-left '#{?#{==:#{client_key_table},root},,#[fg=brightblack,bg=blue]}#{session_name}#[bg=black] '

set-option -g status-right-length 100
set-option -g status-right-style 'fg=brightgreen,bg=black'
set-option -g status-right ' #(cd ~/config/dots/tmux.conf.d/bin; pipenv run python -u status.py) '

set-option -g status-justify left
set-option -g status-style 'bg=brightgreen'
set-window-option -g window-status-format '#[fg=brightblack]#{window_index}#{?window_zoomed_flag,<,/}#[fg=white,#{?window_last_flag,bold,none}]#{window_name}'
set-window-option -g window-status-current-style 'bg=blue'
set-window-option -g window-status-current-format '#[fg=brightblack]#{window_index}#{?window_zoomed_flag,<,/}#[fg=white]#{window_name}'

# pane borders
# todo if we can get something like pane_last_flag then undserscore the last pane
set-option -g pane-border-style 'fg=brightgreen,bg=brightgreen'
set-option -g pane-active-border-style 'fg=brightgreen,bg=brightgreen'
set-option -g pane-border-status top
set-option -g pane-border-format '#[fg=brightblack,bg=#{?pane_active,blue,brightgreen}]#{pane_index}/#[fg=white]#{pane_current_command}'

# colors for display-panes
set-option -g display-panes-colour yellow
set-option -g display-panes-active-colour blue

