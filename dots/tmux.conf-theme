
# show status line
set-option -g status on

set-option -g status-position bottom

# redraw status line every x seconds
set-option -g status-interval 5

set-option -g status-left-length 100
set-option -g status-left-style 'fg=brightgreen,bg=black'
set-option -g status-left '#{session_name} '

set-option -g status-right-length 100
set-option -g status-right-style 'fg=brightgreen,bg=black'
set-option -g status-right " #(mpstat 2 5 | awk '/all/ { print \$13 }')% #(free -g | awk '/^Mem:/ { print \$7\"/\"\$2\"gb\" }') | #(date '+%F %R') | #(hostname)"

set-option -g status-justify left
set-option -g status-style 'bg=brightgreen'
set-window-option -g window-status-format \
	'#[fg=brightblack]#{window_index}#{?window_last_flag,*,/}#[fg=brightwhite]#{window_name}'
set-window-option -g window-status-current-style 'bg=blue'
set-window-option -g window-status-current-format '#[fg=brightwhite]#{window_index}/#[fg=brightblack]#{window_name}'
# todo zoom flag?

# pane borders
set-option -g pane-border-style 'fg=blue,bg=brightblack'
set-option -g pane-active-border-style 'fg=blue,bg=blue'

# colors for display-panes
set-option -g display-panes-colour blue
set-option -g display-panes-active-colour yellow

